<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/commonWhite">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:id="@+id/toolbar"
        android:background="@color/commonOrangeUnPressed" />
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="505dp">
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray"/>
    <RadioGroup
        android:id="@+id/radioGroup"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/indexGroupBtn"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/home_button"
            android:textColor="@color/colorBlack"
            android:text="@string/bottom_menu_index"/>
        <RadioButton
            android:id="@+id/videoGroupBtn"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:drawableTop="@drawable/video_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:text="@string/bottom_menu_video"/>
        <RadioButton
            android:id="@+id/starGroupBtn"
            android:gravity="center"
            android:drawableTop="@drawable/star_button"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:text="@string/bottom_menu_star"/>
        <RadioButton
            android:id="@+id/movieGroupBtn"
            android:gravity="center"
            android:drawableTop="@drawable/movie_button"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:text="@string/bottom_menu_movie"/>
    </RadioGroup>
</LinearLayout>