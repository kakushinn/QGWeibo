<?xml version="1.0" encoding="utf-8"?>
<com.example.administrator.qgweibo.View.CustomViews.VerticalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="@color/commonWhite">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/commonWhite">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:id="@+id/toolbar"
            android:background="@color/commonOrangeUnPressed" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@mipmap/bg_top_star">
            <ImageView
                android:src="@mipmap/icon_sx_27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="30dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/xztb7" />
                    <TextView
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="42dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Aquarius"
                        android:textColor="@color/colorLightBlue"/>
                </LinearLayout>
                <TextView
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="9.23-10.23 爱耍理想家"
                    android:layout_marginLeft="23dp"
                    android:textColor="@color/colorLightBlue"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:background="#f2fbfc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出生于阳历9月23日-10月23日，天秤座的人温和、娴雅、富有魅力、性格平稳、目光敏锐，具有合作精神，是和平主义者。不足之处时优柔寡断，缺乏坦率，难于理解。"
                android:textColor="@color/colorGrayText"/>
        </LinearLayout>
        <RadioGroup
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioButton
                android:checked="true"
                android:background="@drawable/left_switch"
                android:padding="5dp"
                android:button="@null"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@drawable/text_color_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天秤运势"/>
            <RadioButton
                android:background="@drawable/right_switch"
                android:padding="5dp"
                android:button="@null"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@drawable/text_color_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="天秤档案"/>
        </RadioGroup>
        <com.danxx.tabstrip.FlymeTabStrip
            android:id="@+id/star_indicator"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            custom:indicatorHeight="3dp"
            custom:indicatorColor="@android:color/holo_red_light"
            custom:indicatorMargin="20dp"
            custom:indicatorTextSize="15sp"
            custom:selectedIndicatorTextSize="15sp"
            custom:indicatorTextColor="@android:color/black"/>
        <com.example.administrator.qgweibo.View.CustomViews.CustomViewPager
            android:id="@+id/star_luck"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</com.example.administrator.qgweibo.View.CustomViews.VerticalScrollView>
